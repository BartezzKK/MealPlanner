<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MealPlanner.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:MealPlanner.Pages"
    xmlns:local="clr-namespace:MealPlanner">

    <!--<ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />-->



    <TabBar>
        <Tab Title="Home" Icon="calendar.png">
            <ShellContent
                ContentTemplate="{DataTemplate pages:HomePage}"
                Route="HomePage" />
        </Tab>
        <Tab Title="Meals" Icon="meal.png">
            <ShellContent Title="Meals"
                    ContentTemplate="{DataTemplate pages:MealsPage}"
                    Route="MealsPage"/>
        </Tab>
    </TabBar>

</Shell>
