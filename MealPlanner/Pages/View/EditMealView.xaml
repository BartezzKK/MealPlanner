<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MealPlanner.Pages.View.EditMealView"
             xmlns:viewmodel="clr-namespace:MealPlanner.ViewModel"
             x:DataType="viewmodel:EditMealViewModel"
             Title="Edycja posiÅ‚ku">
    <Grid>
        <FlexLayout Direction="Column">
            <Frame Margin="5" Padding="5" FlexLayout.Basis="600">
                <VerticalStackLayout Padding="10">
                    <Entry Placeholder="Id" Text="{Binding EditMeal.Id}" IsVisible="false"/>
                    <Entry Placeholder="Name" Text="{Binding EditMeal.Name}"/>
                    <Editor Placeholder="Description" Text="{Binding EditMeal.Description}" HeightRequest="70" AutoSize="TextChanges"/>
                    <Button Text="Zapisz" Command="{Binding UpdateMealCommand}" Margin="10" />
                </VerticalStackLayout>
            </Frame>
        </FlexLayout>
    </Grid>
</ContentPage>