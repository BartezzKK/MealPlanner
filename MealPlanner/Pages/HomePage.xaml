<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MealPlanner.Pages.HomePage"
             Title="HomePage">

    <ScrollView>
        <!--<CollectionView x:Name="mealPlans" ItemsLayout="VerticalList" >-->
        <CollectionView x:Name="mealPlans" ItemsLayout="VerticalList" EmptyView="Nie masz jeszcze zaplanowanych żadnych posiłków">
            <CollectionView.Header>
                <VerticalStackLayout BackgroundColor="Black" Padding="5">
                    <Label Text="Zaplanowane posiłki" TextColor="White" FontSize="Medium"/>
                </VerticalStackLayout>
            </CollectionView.Header>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width=".2*"/>
                                <ColumnDefinition Width=".8*"/>
                            </Grid.ColumnDefinitions>
                            <Label Text="{Binding MealDate}" Grid.Column="0" Grid.Row="0"/>
                            <Label Text="Test21312" Grid.Column="1" Grid.Row="0"/>
                            <!--<Label Text="{Binding MealId}" Grid.Column="1" Grid.Row="0"/>-->

                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ScrollView>
</ContentPage>